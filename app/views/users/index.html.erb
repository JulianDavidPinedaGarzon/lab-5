<h1>All Users</h1>
<table>
  <tr>
    <th>ID</th>
    <th>Email</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Actions</th>
    <th>Count</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= link_to "View", user_path(user) %></td>
      <td><%= user.messages.count %></td>
      <td><%= link_to 'Editar', edit_user_path(user) %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Add new user", new_user_path %>
