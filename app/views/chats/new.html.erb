<h1>New Chat</h1>

<%= form_with model: @chat do |f| %>
  <%= f.label :sender_id %>
  <%= f.select :sender_id, User.all.collect { |u| [u.email, u.id] } %><br>

  <%= f.label :receiver_id %>
  <%= f.select :receiver_id, User.all.collect { |u| [u.email, u.id] } %><br>

  <%= f.submit "Create Chat" %>
<% end %>

<%= link_to "Back", chats_path %>
<% @chat.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>
