<h1>New Message</h1>

<%= form_with model: @message do |f| %>
  <%= f.label :chat_id %>
  <%= f.select :chat_id, Chat.all.collect { |c| ["Chat ##{c.id}", c.id] } %><br>

  <%= f.label :body %>
  <%= f.text_area :body %><br>

  <%= f.submit "Create Message" %>
<% end %>

<%= link_to "Back", messages_path %>

<% @message.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>
